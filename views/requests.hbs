
{{> header }}

<h1>{{ t "requests:title" (object name=logged_user.name lastname=logged_user.lastname) }}</h1>

{{> show_flash_messages }}

<div class="row main-row_header">
  <p class="col-md-12">{{ t "requests:leave_request_to_approve" }}</p>
</div>

<div class="row">
  {{# unless to_be_approved_leaves}}
  <div class="col-md-12 text-muted">
    {{ t "requests:no_leave_requests" }}
  </div>
  {{else}}
  <div class="col-md-12">
    <p class="visible-xs-block"><em class="text-muted">{{ t "scroll_table_horizontally" }}</em></p>
    <div class="table-responsive">
    <table class="table table-hover requests-to-approve-table">
      <thead>
        <tr>
          <th>{{ t "table_head_employee" }}</th>
          <th>{{ t "table_head_department" }}</th>
          <th>{{ t "table_head_date_of_request" }}</th>
          <th>{{ t "table_head_leave_date" }}</th>
          <th>{{ t "table_head_type" }}</th>
          <th>{{ t "days" }}</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        {{#each to_be_approved_leaves }}
        <tr vpp="pending_for__{{this.user.email}}">
          <td>{{#with this.user}}{{this.full_name}}{{/with}}</td>
          <td>{{this.user.department.name}}</td>
          <td class="date_of_request">{{as_date_from_timestamp this.createdAt}}</td>
          <td data-tom-leave-dates="1">{{> leave_dates leave=this}}</td>
          <td>{{#if this.is_pended_revoke_leave}}{{ t "revoke" }} {{/if}}{{this.leave_type.name}}</td>
          <td data-vpp="days_used">{{ this.get_deducted_days_number }}</td>
          <td>
            <form action="/requests/reject/" method="POST">
            <input class="btn btn-warning" type="submit" value="{{ t "reject" }}">
            <input type="hidden" value="{{this.id}}" name="request">
            </form>
          </td>
          <td>
            <form action="/requests/approve/" method="POST">
            <input class="btn btn-success" type="submit" value="{{ t "approve" }}">
            <input type="hidden" value="{{this.id}}" name="request">
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    </div>
  </div>
  {{/unless}}
</div>


<div class="main-row_header">&nbsp;</div>

<div class="row main-row_header">
  <p class="col-md-12">{{ t "requests:all_my_absences" }}</p>
</div>

{{> user_requests_grouped grouped_leaves=my_leaves_grouped logged_user=logged_user }}

{{>footer}}
