

{{> header }}

<h1>{{t "settings:title" }}</h1>

<p class="lead">{{t "settings:subtitle" }}</p>

{{> show_flash_messages }}

<div class="row">&nbsp;</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        {{t "settings:company" }}
      </div>
      <div class="panel-body">
        <div class="row">

          <div class="col-md-5">
            <form class="form-horizontal" method="POST" action="/settings/company/" id="company_edit_form">
              <div class="form-group">
                <label for="input_company_name" class="col-md-4 control-label">{{ t "settings:company_name" }}</label>
                <div class="col-md-8">
                  <input class="form-control" id="input_company_name" placeholder="Our company name" value="{{company.name}}" name="name">
                </div>
              </div>
              <div class="form-group">
                <label for="input_country" class="col-md-4 control-label">{{ t "settings:country" }}</label>
                <div class="col-md-8">
                  <select class="form-control" id="input_country" name="country">
                    {{#each countries}}
                    <option value="{{@key}}" {{# if_equal @key ../company.country }} selected="selected"{{/if_equal}}>{{@key}}: {{this.name}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="input_date_format" class="col-md-4 control-label">{{ t "settings:date_format" }}</label>
                <div class="col-md-8">
                  <select class="form-control" id="input_date_format" name="date_format">
                    {{#with company}}
                    {{#each this.get_available_date_formats}}
                    <option value="{{this}}" {{# if_equal this ../date_format }} selected="selected"{{/if_equal}}>{{this}}</option>
                    {{/each}}
                    {{/with}}
                  </select>
                </div>
              </div>


              <div class="form-group">
                <label for="input_time_zone" class="col-md-4 control-label">{{ t "settings:time_zone" }}</label>
                <div class="col-md-8">
                  <select class="form-control" id="input_time_zone" name="timezone">
                    {{#each timezones_available}}
                    <option value="{{this}}" {{# if_equal this ../company.timezone }} selected="selected"{{/if_equal}}>{{this}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="input_language" class="col-md-4 control-label">{{ t "settings:language" }}</label>
                <div class="col-md-8">
                  <select class="form-control" id="input_language" name="language">
                    {{#each language_available}}
                     <option value="{{@key}}" {{# if_equal @key ../company.language }} selected="selected"{{/if_equal}}>{{this.name}} ({{@key}})</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="input_carry_over" class="col-md-4 control-label">{{ t "settings:carried_over_days" }}</label>
                <div class="col-md-8">
                  <select class="form-control" id="input_carry_over" name="carry_over">
                    {{#each carryOverOptions}}
                    <option value="{{this.days}}" {{# if_equal this.days ../company.carry_over }} selected="selected"{{/if_equal}}>{{this.label}}</option>
                    {{/each}}
                  </select>
                    <p>
                      <em>{{ t "settings:carried_over_days_info" }}</em>
                    </p>
                </div>
              </div>


              <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                  <div class="checkbox">
                    <label for="share-all-absences">
                      <input id="share-all-absences" type="checkbox" name="share_all_absences" {{# if company.share_all_absences }} checked="checked"{{/if}}>{{ t "settings:share_absences" }}
                    </label>
                    <p>
                      <em>{{ t "settings:share_absences_info" }}</em>
                    </p>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <button type="submit" class="btn btn-success pull-right">{{ t "settings:save_changes" }}</button>
                </div>
              </div>
            </form>
          </div>

          <div class="col-md-offset-1 col-md-5">

            <div class="form-horizontal">
              <div class="form-group">
                <label for="" class="col-md-7 control-label">{{ t "settings:backup_leave" }}</label>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2">
                  <em>{{{ t "settings:backup_leave_desc" }}}</em>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2 col-md-11">
                  <a class="btn btn-success pull-right" href="/settings/company/backup/"><i class="fa fa-download"></i> {{ t "settings:save_schedule" }}</a>
                </div>
              </div>
            </div>

            <form class="form-horizontal" method="POST" action="/settings/schedule" id="company_schedule_form">
            <input type="hidden" name="company_wide" value="1">
            <div class="form-group">
              <label for="" class="col-md-6 control-label">{{ t "settings:company_week_schedule" }}</label>
            </div>
            <div class="form-group">
              <div class="col-md-offset-2">
                {{> schedule_widget}}
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-offset-2">
                <em>{{ t "settings:company_week_schedule_desc" }}</em>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-offset-2 col-md-11">
                <button type="submit" class="btn btn-success pull-right">{{ t "settings:save_schedule" }}</button>
              </div>
            </div>
            </form>

            <div class="form-horizontal">
              <div class="form-group">
                <label for="" class="col-md-10 control-label">{{ t "settings:calculate_carry_over" }}</label>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2">
                  <p><em>{{ t "settings:calculate_carry_over_desc" (object yearPrev=yearPrev yearCurrent=yearCurrent) }}</em></p>                  
                </div>
              </div>
              <div class="form-group">
                <form class="col-md-offset-2 col-md-11" id="calculate_carry_over_form" method="post" action="/settings/carryOverUnusedAllowance">
                  <button class="btn btn-success pull-right" type="submit"><i class="fa fa-share"></i> {{ t "settings:carry_over_allowance" }}
                  </button>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        {{ t "bank_holidays" }}
      </div>
      <div class="panel-body">
        <form id="delete_bankholiday_form" method="post" action="/settings/bankholidays/delete/"></form>
        <form id="import_bankholiday_form" method="post" action="/settings/bankholidays/import/"></form>
        <form id="update_bankholiday_form" method="post" action="/settings/bankholidays/">

        <div class="row">
          <div class="col-md-4"><label class="control-label">{{ t "date" }}</label></div>
          <div class="col-md-6"><label class="control-label">{{ t "settings:holiday_name" }}</label></div>
        </div>

        <div class="row">&nbsp;</div>

        {{# unless company.bank_holidays.length }}
        <div class="row">
          <div class="col-md-4 tst-no-bank-holidays">{{ t "settings:no_bank_holiday_records" }}</div>
        </div>
        {{/unless}}

        {{#each company.bank_holidays}}
        <div class="row">

          <div class="col-md-4">
            <div class="input-append date">
            <input type="text" class="form-control" value="{{as_date date}}" name="date__{{@index}}" data-date-autoclose="1" data-provide="datepicker" data-date-format="{{#with ../logged_user.company}}{{this.get_default_date_format_for_date_picker}}{{/with}}" data-date-week-start="1">
            <span class="add-on"><i class="icon-th"></i></span>
            </div>
          </div>

          <div class="col-md-6">
              <input type="text" class="form-control" value="{{name}}" name="name__{{@index}}">
          </div>

          <div class="col-md-2">
            <button class="btn btn-default pull-right bankholiday-remove-btn" type="button" value="{{@index}}"><span class="fa fa-remove"></span></button>
          </div>
        </div>

        <div class="row">&nbsp;</div>

        {{/each}}

        <div class="row">&nbsp;</div>

        <div class="row">
          <div class="col-md-12">
            <div class="pull-right">
              <button id="bankholiday-import-btn" class="btn btn-default" type="button">{{ t "settings:import_default_holidays" }}</button>
              <button class="btn btn-default" type="button" data-toggle="modal" data-target="#add_new_bank_holiday_modal" id="add_new_bank_holiday_btn">{{ t "add_new" }}</button>
              <button type="submit" class="btn btn-success">{{ t "save_changes" }}</button>
            </div>
          </div>
        </div>

        </form>
      </div>
    </div>
  </div>


  <div class="col-md-7 setting-general-2nd-column">

    <div class="panel panel-default">

      <div class="panel-heading">
        {{ t "settings:leave_types" }}
      </div>

      <div class="panel-body">

        <div class="row">
          <div class="col-md-6">
            <label class="control-label">{{ t "settings:leave_type_name" }}</label>
            <p><em>{{ t "settings:leave_type_name_desc" }}</em></p>
          </div>
          <div class="col-md-offset-3 col-md-2">
            <label class="control-label">{{ t "settings:limit" }}</label>
            <p><em>{{ t "settings:days_year" }}</em></p>
          </div>
        </div>

        <div class="row">&nbsp;</div>

        <form id="delete_leavetype_form" method="post" action="/settings/leavetypes/delete/"></form>
        <form id="leave_type_edit_form" method="post" action="/settings/leavetypes/">

        {{# unless company.leave_types.length }}
        <div class="row">
          <div class="col-md-4">{{ t "settings:no_leave_type_records" }}</div>
        </div>
        {{/unless}}


        {{#each company.leave_types}}
        <div class="row">
          <div class="col-md-6">

            <div class="input-group">
              <span class="input-group-addon">
                <input type="radio" name="first_record" value="{{ this.id }}" {{# if this.sort_order }}checked="checked"{{/ if}}>
              </span>
              <input type="text" class="form-control" name="name__{{ this.id }}" value="{{name}}" data-tom-leave-type-order="name_{{@index}}">

              <div class="input-group-btn" data-tom-color-picker="1" data-tom-leave-type-order="colour__{{@index}}">
                <input type="hidden" name="color__{{ this.id }}" value="{{# with this }}{{ this.get_color_class }}{{/with}}">
                <button type="button" class="btn btn-default dropdown-toggle {{# with this }}{{ this.get_color_class }}{{/with}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-paint-brush"></i></button>
                <ul class="dropdown-menu">
                  <li><a href="#" class="btn btd-default leave_type_color_1" data-tom-color-picker-css-class="leave_type_color_1">{{ t "settings:color_" (object num="1") }}</a></li>
                  <li><a href="#" class="btn btd-default leave_type_color_2" data-tom-color-picker-css-class="leave_type_color_2">{{ t "settings:color_" (object num="2") }}</a></li>
                  <li><a href="#" class="btn btd-default leave_type_color_3" data-tom-color-picker-css-class="leave_type_color_3">{{ t "settings:color_" (object num="3") }}</a></li>
                  <li><a href="#" class="btn btd-default leave_type_color_4" data-tom-color-picker-css-class="leave_type_color_4">{{ t "settings:color_" (object num="4") }}</a></li>
                  <li><a href="#" class="btn btd-default leave_type_color_5" data-tom-color-picker-css-class="leave_type_color_5">{{ t "settings:color_" (object num="5") }}</a></li>
                </ul>
              </div>

            </div>

          </div>
          <div class="col-md-3">
            <input name="use_allowance__{{ this.id }}" id="use_allowance__{{ this.id }}" type="checkbox" {{#if use_allowance}}checked="checked"{{/if}} data-tom-leave-type-order="allowance_{{@index}}">
            <label for="use_allowance__{{ this.id }}" class="control-label">{{ t "use_allowance" }}</label>
          </div>
          <div class="col-md-2">
            <input type="number" class="form-control" value="{{limit}}" name="limit__{{ this.id }}" data-tom-leave-type-order="limit_{{@index}}">
          </div>
          <div class="col-md-1">
            <button class="btn btn-default pull-right leavetype-remove-btn" value="{{ this.id }}" data-tom-leave-type-order="remove_{{@index}}"><span class="fa fa-remove"></span></button>
          </div>
        </div>

        <div class="row">&nbsp;</div>

        {{/each}}

        <div class="row">&nbsp;</div>

        <div class="row">
          <div class="col-md-12">
            <div class="pull-right">
              <button class="btn btn-default" data-toggle="modal" data-target="#add_new_leave_type_modal" type="button" id="add_new_leave_type_btn">{{ t "add_new" }}</button>
              <button type="submit" class="btn btn-success">{{ t "settings:save_changes" }}</button>
            </div>
          </div>
        </div>
        </form>
      </div>
    </div>
  </div>

</div>



<div class="row">
  <div class="col-md-12">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <i class="fa fa-bomb"></i> {{ t "settings:danger_zone" }}
      </div>
      <div class="panel-body">

          <div class="col-md-12">

            <div class="form-horizontal">
              <div class="form-group">
                <label for="" class="control-label">{{ t "settings:remove_company_account" }}</label>
              </div>
              <div class="form-group">
                <div class="col-md-6">
                  <p><em>{{ t "settings:danger_zone_desc" (object companyname=company.name) }}</em></p>
                  <p><em>{{ t "settings:danger_zone_desc_2" }}</em></p>
                  <p><em>{{{ t "settings:danger_zone_desc_3" (object url="/settings/company/backup/") }}}</em></p>
                </div>
                <div class="col-md-6">
                  <button class="btn btn-danger pull-right" data-toggle="modal" data-target="#remove_company_modal" type="button"><i class="fa fa-remove"></i> {{ t "settings:delete_company_account" }}</button>
                </div>
              </div>
            </div>

          </div>


      </div>
    </div>
  </div>
</div>


{{> add_new_bank_holiday_modal
  container_id='add_new_bank_holiday_modal'
  form_action='/settings/bankholidays/'
}}


{{> add_new_leave_type_modal
  container_id='add_new_leave_type_modal'
  form_action='/settings/leavetypes/'
}}

{{> remove_company_modal
  container_id='remove_company_modal'
  
}}

{{> footer }}
